#!/bin/bash

# Function to classify age
classify_age() {
    local age=$1
    local category=""

    if (( age < 13 )); then
        category="child"
    elif (( age >= 13 && age <= 19 )); then
        category="teenager"
    elif (( age >= 20 && age <= 60 )); then
        category="adult"
    else
        category="old age"
    fi

    echo "Age: $age"
    echo "Category: $category"
}

# Read age from user input
read -p "Enter your age: " age

# Check if the input is a valid number
if [[ ! $age =~ ^[0-9]+$ ]]; then
    echo "Invalid input. Please enter a valid number."
    exit 1
fi

# Classify and display the age category
classify_age $age
